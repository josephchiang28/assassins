<div class="jumbotron">
  <div class="container">
    <h1>Welcome!</h1>
    <% if user_signed_in? %>
      <div>
        Hello <%= current_user.first_name %>
      </div>
    <% else %>
      <p>Sign up or sign in to get started.</p>
      <div>
        <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
        <%= link_to 'Sign in with Google', user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
</div>